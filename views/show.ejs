<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <%- include('partials/head') %>
</head>
  <body>
    <%- include('partials/header') %>
    <div class="show-container">
      <section>

        <h1><%= recipe.name %></h1>

        <h2><%= recipe.creator %></h2>


        <h2><%= recipe.date %></h2>

      </section>


      <img src="<%= recipe.image %>" />

      <section>
        <p><%= recipe.description %></p>
      </section>
      <section>

        <h2><%= recipe.length %></h2>

        <h2><%= recipe.yield %></h2>

        <h2><%= recipe.equipment %></h2>

        <p><%= recipe.ingredients %></p>

        <p><%= recipe.preparation %></p>

        <h2><%= recipe.beer %></h2>
      </section>


    </div>
    <a class="waves-effect waves-light btn" href="/recipes/<%= recipe._id %>/edit">TEST Edit Recipes</a>
    <form action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST">
      <a class="waves-effect waves-light btn" href="/recipes/<%= recipe._id %>/edit">Edit Recipes</a>
      <input class="delete-button" type="submit" value="Delete" />
    </form>
    <%- include('partials/footer') %>

  </body>
</html>
